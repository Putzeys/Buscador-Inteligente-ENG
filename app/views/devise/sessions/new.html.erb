<div class="container mx-auto mt-5", style="max-width: 500px">
  <h2 class="text-center">Log in</h2>

  <div class="form-control">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label_html: { class: "mb-2 mt-2" },
                    input_html: { autocomplete: "email", placeholder: "exemplo@email.com" } %>
        <%= f.input :password,
                    required: false,
                    label_html: { class: "mb-2 mt-3" },
                    input_html: { autocomplete: "current-password", placeholder: "Digite sua senha..." } %>
        <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions mt-4 mx-auto d-grid gap-2 col-5">
        <%= f.button :submit, "Log in", :class => "btn btn-primary" %>
      </div>

    <% end %>

    <div class="text-center">
        <%= link_to "Criar conta", new_usuario_registration_path, :class => "btn btn-link" %>
    </div>
  </div>

</div>