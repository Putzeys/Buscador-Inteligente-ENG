<%= simple_form_for(@cadastro) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class = "form-inputs">

  <%=f.input :name, label: "Nome Completo", error: "Nome completo é obrigatório", placeholder: "João da Silva" %>
  <%=f.input :birthday_date, label: "Data de aniversário"%>
  <%=f.input :email, placeholder: "user@domain.com", label: "Email"%>
  <%=f.input :password, label: "Senha"%>
  <%=f.input :confirm_password, label: "Confirmar Senha"%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
